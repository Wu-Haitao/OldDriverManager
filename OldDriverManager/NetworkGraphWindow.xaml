<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OldDriverManager"
        xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" x:Class="OldDriverManager.NetworkGraphWindow"
        mc:Ignorable="d"
        Title="网络视图" Height="450" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="Update" Content="刷新" HorizontalAlignment="Left" Margin="25,0,0,50" VerticalAlignment="Bottom" Width="60" Height="30" Click="Update_Click"/>
        <Button x:Name="Exit" Content="退出" HorizontalAlignment="Left" Margin="100,0,0,50" VerticalAlignment="Bottom" Width="60" Height="30" Click="Exit_Click"/>

        <Wpf:WebView2 x:Name="Graph" HorizontalAlignment="Stretch" Margin="25,20,25,100" VerticalAlignment="Stretch"/>

    </Grid>
</mah:MetroWindow>
