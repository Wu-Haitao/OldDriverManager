<mah:MetroWindow x:Class="OldDriverManager.BatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OldDriverManager"
        mc:Ignorable="d"
        Title="{DynamicResource Batch}" Height="200" Width="160" ResizeMode="NoResize" Icon="/Resource/icon.jpg" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="Import" Content="{DynamicResource Import}" HorizontalAlignment="Center" Height="40" Margin="0,25,0,0" VerticalAlignment="Top" Width="120" Click="Import_Click"/>
        <Button x:Name="Delete" Content="{DynamicResource Validate}" HorizontalAlignment="Center" Height="40" Margin="0,70,0,0" VerticalAlignment="Top" Width="120" Click="Delete_Click"/>
        <Button x:Name="Export" Content="{DynamicResource Export}" HorizontalAlignment="Center" Height="40" Margin="0,115,0,0" VerticalAlignment="Top" Width="120" Click="Export_Click"/>
    </Grid>
</mah:MetroWindow>
